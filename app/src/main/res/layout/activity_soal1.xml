<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amicta.kazt.quislock.view.Soal1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="ayo sebutin presiden indonesia sekaranng"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="masukin jawaban kmu disini"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:id="@+id/edt_soal1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Jawab"
        android:background="@drawable/back_border_buttom_yellow"
        android:id="@+id/btn_soal1"/>

</LinearLayout>
